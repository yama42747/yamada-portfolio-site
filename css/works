<script>
// ===== All Works 作品クリックでポップアップ表示（No.21はYouTube遷移） =====
document.querySelectorAll('.work-thumb').forEach(item => {
  item.addEventListener('click', e => {
    e.preventDefault();
    const img = item.querySelector('img');
    if (!img) return;

    // 作品21だけYouTubeリンクに遷移
    if (img.getAttribute('data-num') === '21') {
      window.open('https://www.youtube.com/watch?v=aflsyCnP3oM', '_blank');
      return;
    }

    // それ以外はポップアップ表示
    const modal = document.getElementById('popup-modal');
    const popupImg = document.getElementById('popup-image');
    popupImg.src = img.src;
    modal.classList.add('active');
  });
});

// ポップアップ閉じる
document.getElementById('popup-close').addEventListener('click', () => {
  document.getElementById('popup-modal').classList.remove('active');
});

// モーダル背景クリックでも閉じる
document.getElementById('popup-modal').addEventListener('click', e => {
  if (e.target.id === 'popup-modal') {
    e.target.classList.remove('active');
  }
});
</script><script>
/* ===== images/0X.(jpg|png) or X.(jpg|png) 自動解決ローダ ===== */
(function(){
  function pad2(n){ return String(n).padStart(2,'0'); }
  function tryLoad(img, urls, idx){
    if(idx >= urls.length){ return; }
    var test = new Image();
    test.onload = function(){ img.src = this.src; };
    test.onerror = function(){ tryLoad(img, urls, idx+1); };
    test.src = urls[idx];
  }
  document.addEventListener('DOMContentLoaded', function(){
    document.querySelectorAll('.work-grid a.work-thumb img[data-num]').forEach(function(img){
      var n = img.getAttribute('data-num');
      var p = pad2(n);
      var urls = [
        '../images/' + p + '.jpg',
        '../images/' + p + '.png',
        '../images/' + n + '.jpg',
        '../images/' + n + '.png'
      ];
      // 先頭のsrcが表示できていればそのまま。だめなら順次切り替え
      var first = new Image();
      first.onload = function(){};
      first.onerror = function(){ tryLoad(img, urls, 0); };
      first.src = img.src || urls[0];
    });
  });
})();
</script></body>
